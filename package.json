{
  "name": "Calendar",
  "version": "1.0.0",
  "displayName": "Calendar",
  "description": "Manage your events and alarms with your Cozy.",
  "engines": [
    "node = 0.8.x"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mycozycloud/cozy-agenda.git"
  },
  "main": "server.coffee",
  "dependencies": {
    "jade": "= 0.27.6",
    "americano": "= 0.3.0",
    "americano-cozy": "0.1.10",
    "async": "= 0.1.22",
    "cozy-realtime-adapter": "= 0.11.1",
    "time": "~0.9.2",
    "moment": "2.0.0",
    "cozy-ical": "0.0.8"
  },
  "devDependencies": {
    "should": "= 1.2.0",
    "mocha": "= 1.6.0",
    "chai": "= 1.3.0",
    "request-json": ">= 0",
    "sinon": "~1.6.0"
  },
  "scripts": {
    "test": "cake tests",
    "start": "node server.js"
  },
  "cozy-permissions": {
    "Alarm": {
      "description": "Creates and edits your alarms."
    },
    "Event": {
      "description": "Creates and edits your events."
    },
    "User": {
      "description": "Used to recover your timezone"
    },
    "CozyInstance": {
      "description": "Used to recover your language setting and your cozy's domain"
    },
    "Contact": {
      "description": "Invite your contacts to an event"
    },
    "send mail from user": {
      "description": "Send invitations by mail"
    }
  }
}
