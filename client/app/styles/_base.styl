html,
body
    height 100%
    width 100%
    padding 0

body
    text-rendering optimizeLegibility
    background grey-01

body,
input
    color darkgrey
    line-height 1.2

a,
a:visited
    color blue
    text-decoration none

    &:hover
        text-decoration underline

[aria-hidden=true]
    display none !important

/* fixing bootstrap */

body.modal-open, .modal-open .navbar-fixed-top, .modal-open .navbar-fixed-bottom
  margin-right 0

.modal
    position absolute
    margin-bottom 5em
    padding 0
    box-sizing border-box

textareahover,
input[type="text"]hover,
textareaactive,
input[type="text"]active,
textareafocus,
input[type="text"]focus
afocus,
.btnfocus
     outline 0px !important
     -webkit-appearance: none

.well
    border-radius 0
    background white
    box-shadow none
    border 0

.btn
    border 0
    background blue
    color white
    box-shadow none
    text-shadow none
    border-radius 0
    font-family 'Source Sans Pro', sans-serif
    font-weight bold
    border-radius 3px
    transition background 0.2s
    transition color 0.2s

    &:hover
        background darkblue
        border-color darkblue
        color white

.badge
    background grey-01

.badge-info
    background blue
    color white

.btnhover
.btnfocus
    color white
    background darkblue
    border-color darkblue
    text-shadow none

.form-horizontal
    .control-group
        margin-bottom 10px

    margin-bottom 0 !important

    .control-label
        font-size 13px
        width 100px
    .controls
        margin-left 120px

        .add-on i
            margin-top 2px !important

.helptext
    margin 1.5em 2em
    padding-bottom 0.5em
    font-family 'Source Sans Pro', sans-serif

    h3
        display inline-block
        margin 0 0 0.5em
        font-size 1.2em
        text-transform uppercase

    i
        margin-right 0.5em
        font-size 1.2em


.info
    font-size 12px
    color grey-06

.datepicker
    z-index 1150

.showafter
.showbefore
    margin 1em 0

.main-container
    box-sizing border-box
    margin-left 200px
    border 0
    width auto
    background white

.container
    margin 0

input[type="date"]
  width 150px

input[type="time"]
  width 75px

.stick-bottom
    position fixed
    bottom 1em
