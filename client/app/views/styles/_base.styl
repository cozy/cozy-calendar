// Base Styles

blue = #34A6FF
lightblue = #CBE4FB
green = #5C5
orange = #fe8800
lightorange = #FFC47F
darkgrey = #333
lightgrey = #CCC
grey = #AAA
red = #DD3333


@font-face
    font-family: styled
    src: url('/fonts/maven-pro-light-300.otf')

@font-face
    font-family: main
    src: url('/fonts/signika-regular.ttf')


html,
body
    height 100%
    width 100%

body
    text-rendering optimizeLegibility
    background-image: url('../img/background.jpg')

body,
input
    color #444
    font 300 16px Geneva, Verdana, "Lucida Sans", "Lucida Grande", "Lucida Sans Unicode", sans-serif
    line-height 1.2

a,
a:visited
    color #0086cc
    text-decoration none

    &:hover
        text-decoration underline
