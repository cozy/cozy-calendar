// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

@import '_base'
@import '_cozy'
@import '_ui'

// Import your styles here

@import '_states'
@import '_layout'
@import '_responsive'

ul#menu
  list-style-type: none
  text-align: left

  li
    display: inline-block
    margin: 10px 3px 0 3px

    a
      color: #fff
      border-radius: 4px

  li:first-child
      margin-left: 20px

.info
    font-size: 12px
    color: #777

#event-modal
    padding: 0

    .modal-header
        background: bluegreen

    a.btn.rrule-show
        border-radius: 0px
        padding: 5px

.datepicker
    z-index 1150

#addguest.btn
    border-radius: 0px
    padding: 5px

.addform
  #date-control
    display: inline-block

  #add-alarm
    margin-bottom: 0

#alarms
  box-sizing: border-box
  padding 20px
  margin 0px
  border-bottom 0px
  border-top 0px

.form-horizontal
    .control-group
        margin-bottom: 10px

    margin-bottom: 0 !important

    .control-label
        font-size: 13px
        width: 100px
    .controls
        margin-left: 120px

        .add-on i
            margin-top: 2px !important


.main-container
    margin: auto
    max-width: 1200px
    border: 1px solid #DDD
    border-width 0px 1px
    background: white
    box-shadow: 1px 1px 2px #CCC
    box-sizing: border-box

input[type="date"]
  width: 150px
input[type="time"]
  width: 75px

.dayprogram
  border-bottom: 1px solid rgba(0, 0, 0, 0.05)
  padding-bottom: 15px
  margin-bottom: 15px

  h2
    i
      margin-top 10px
      margin-left 10px
      display none
      cursor pointer
  &:hover h2 i
      display inline-block

  .alarms
    margin-top: 15px

    p
      line-height: 20px

      i
        margin: 3px 5px
        display: none
        line-height: 14px
        height: 14px
        cursor: pointer
      &:hover i
        display: inline-block

.dayprogram:nth-last-child(1)
  border-bottom: 0
  padding-bottom: 0

.showbefore
    margin: 0px 20px 20px 20px

.affix
  position: fixed
  top: 0px
  margin: auto
  > div
    border-width: 5px
    border-radius: 0

.well
    border-radius: 0
    background: white
    box-shadow: none
    border: 0


.btn
    border: 0
    background: blue
    color: white
    box-shadow: none
    text-shadow: none
    border-radius: 0
    font-family: main
    font-weight: bold
    border-radius: 4px

.btn:hover
    background: orange
    color: white
    border-color: orange
    text-shadow: none

.popover
    padding: 0

.popover-title
    color: white
    background-color: bluegreen
    border: 0

    .close
        color: white
        opacity: 0.7

.popover-content
    font-family: styled

    a.advanced-link
        margin-left 10px

    padding: 0

    div
    ul
        padding: 10px 10px 0px 10px

    div.popover-footer
        text-align: right
        padding: 5px
        border-bottom-left-radius: 5px
        border-bottom-right-radius: 5px

    input
    select
    textarea
        font-family: styled
        margin-left: 5px
        border: 1px solid blue
        border-radius: 0
        box-shadow: 0
        border: 1px solid transparent

    input:hover
    select:hover
        border: 1px solid orange

    input:active
    select:active
    input:focus
    select:focus
        box-shadow: none

    .nav-tabs
        li
            a
                font-size: 16px
                cursor: pointer
            a:hover
                background: lightorange
                color: #333
        li.active
            a:hover
                background: white
                color: #333

.popover-footer
    background: #F5F5F5

// .popover-content
#add-alarm

    input
    select
        border: 1px solid lightgrey
        box-shadow: 0
        border-radius: 0px
        shadow: none
        font-family: styled, helvetica

    input.disabled
        border: 1px solid transparent

    input:hover
    select:hover
        border: 1px solid orange
        border-radius: 0px
        shadow: inset 1px 1px 2px rgba(100, 100, 100, 0.1)
        color: #333

    input:focus
    input:active
    select:active
    select:focus
        border: 1px solid blue
        box-shadow: none

    .add-on
        border-radius: 0

    .datepicker td.day:hover
        background: lightorange

    .bootstrap-timepicker-widget table td a:hover
        background: lightorange
        border: 1px solid transparent

    #alarm-description-input
        font-size: 24px
        line-height: 40px
        height: 40px

    button.add-alarm.disabled
      border: 1px solid grey

    button.add-alarm
        float: left
        margin-top: 10px

    button.cancel
        margin-left: 5px
        margin-top: 10px

#action
    width: 110px

h2
    font-family: styled

#alarm-list
    margin-top: 10px

    h2
        font-weight: normal

    div
        font-family: main


.icon-bell:before
.icon-th:before
.icon-th-list:before
.icon-share:before
.icon-upload:before
.icon-arrow-down:before
.icon-arrow-up:before
.icon-circle-arrow-down:before
.icon-circle-arrow-up:before
    content: ""

.active.btn
    background: blue - 20%
    box-shadow: 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.0)
    cursor: default

#import-form
    margin-top: 20px

    h1
    h3
        font-weight: normal

    #import-button
        position relative
        overflow hidden
        input
            opacity 0.01
            cursor pointer
            position absolute
            left 0px
            border 0px
            font-size 100px
            bottom 0px
            margin 0px
            width 100%
            height 100%

    #import-alarm-list
        margin-top: 20px

    .alarm
        p
            margin: 0
            font-weight: 10px

    .event
        p
            margin: 0
            sharefont-weight: 10px

body
    padding: 0

.container
    display: block
    width: 100%
    margin: 0
    padding: 0
    box-sizing: border-box

@media(max-width: 1000px)
    body
        padding: 0


    #alarms
        width: 100%
        margin: 0px
        padding: 5px
        box-sizing: border-box

        .fc-header-title
            h2
                font-size: 16px

    #viewContainer
        padding: 0

        .container:before
        .container:after
            display: block


    #input-time
    #input-timezone
    #action
    #date-control
        display: block
        margin-bottom: 10px

@media(max-width: 700px)
    #alarms
        .fc-day-header
            font-size: 12px
            text-align: center
            padding-left: 5px

    #alarm-list
        h2
            font-size: 22px


@media(max-width: 600px)
    #menu
        span
            display: none

        #import-menu-button
            display: none

    #alarms
        .fc-day-header
            font-size: 10px

        .fc-button-today
            display: none

        td.fc-header-right
            span
                display: none

        .fc-event-title
            display: none

        .fc-border-separate
            width: 100%

@media(max-width: 500px)
    #alarms
        .popover
            width: 310px

            input
                width: 260px

            button
                display: block
