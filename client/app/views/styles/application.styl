// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

@import '_base'
@import '_ui'

// Import your styles here

@import '_states'
@import '_layout'
@import '_responsive'

ul#menu
  list-style-type: none
  text-align: right

  li
    display: inline-block
    margin: 0 5px

    a
      color: #fff


.addform
  .tooltip.top .tooltip-arrow
      border-top-color: red
  .tooltip.bottom .tooltip-arrow
      border-bottom-color: red
  .tooltip.left .tooltip-arrow
      border-left-color: red
  .tooltip.right .tooltip-arrow
      border-right-color: red
  .tooltip .tooltip-inner
      background: red

  #date-control
    display: inline-block

  #add-alarm
    margin-bottom: 0

.form-horizontal
  margin-bottom: 0 !important

  .control-label
    font-size: 13px
    width: 100px
  .controls
    margin-left: 120px

    .add-on i
        margin-top: 2px !important


input[type="date"]
  width: 150px
input[type="time"]
  width: 75px

.dayprogram
  border-bottom: 1px solid rgba(0, 0, 0, 0.05)
  padding-bottom: 15px
  margin-bottom: 15px

  .alarms
    margin-top: 15px

    p
      line-height: 20px
      i
        margin: 3px 5px
        display: none
        line-height: 14px
        height: 14px
        cursor: pointer
      &:hover i
        display: inline-block

.dayprogram:nth-last-child(1)
  border-bottom: 0
  padding-bottom: 0

.affix
  position: fixed
  top: 0px
  margin: auto
  > div
    border-width: 5px
    border-radius: 0

.well
    border-radius: 0
    background: white
    box-shadow: 1px 1px 2px #DDDDDD


.btn
    border: 1px solid blue
    background: blue
    color: white
    box-shadow: none
    text-shadow: none
    border-radius: 0
    font-family: main
    font-weight: bold

.btn:hover
    background: orange
    color: white
    border-color: orange
    text-shadow: none

.popover-title
    color: white
    background: grey
    border: 0

    .close
        color: white
        opacity: 0.7

.popover-content
    input
        margin-left: 5px

    #inputStart
    #inputEnd
        width: 148px


.popover-content
#add-alarm

    margin-top: 20px
    input
    select
        border: 1px solid lightgrey
        box-shadow: 0
        border-radius: 0px
        shadow: none
        font-family: styled, helvetica

    input.disabled
        border: 1px solid transparent

    input:hover
    select:hover
        border: 1px solid orange
        border-radius: 0px
        shadow: inset 1px 1px 2px rgba(100, 100, 100, 0.1)
        color: #333

    input:focus
    input:active
    select:active
    select:focus
        border: 1px solid blue
        box-shadow: none

    .add-on
        border-radius: 0

    .datepicker td.day:hover
        background: lightorange

    .bootstrap-timepicker-widget table td a:hover
        background: lightorange
        border: 1px solid transparent

    #alarm-description-input
        font-size: 24px
        line-height: 40px
        height: 40px

    button.add-alarm.disabled
      border: 1px solid grey

#alarms
    h2
        font-family: styled

.affix div.form-horizontal
    border: 1px solid #DDD


.icon-arrow-down:before
    content: ""
