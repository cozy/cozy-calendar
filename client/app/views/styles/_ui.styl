.ui-menu
    z-index 1200

#event-modal
    padding: 0

    .btn
        border-radius 5px

    .alert
        margin-bottom 0px

    .modal-header
        background #aaa
        color #fff
        border-radius 5px 5px 0 0

        button.close
            margin-top -2px

    .modal-body

        h4
            margin-top 25px
            font-size 20px
            font-family styled

        .rrule-show
            cursor pointer

        .tagit

            .tagit-close, .tagit-choice
                color inherit
                &:hover
                    text-decoration none
            .text-icon
                display inline
                color inherit


        #rrule-short
            font-size 14px

        #rrule
            #rrule-interval
            #rrule-freq
            #rrule-until
            #rrule-count
                margin 0 5px

            #rrule-interval
            #rrule-count
                width 35px
            #rrule-freq
                width 175px

            #rrule-weekdays
                label.checkbox
                        margin-left 5px

        #guests
            #addguest
            #addguest-field
                vertical-align top
            #addguest
                margin-left 5px

            #guest-info
                display inline-block
                height 30px
                max-width 200px
                margin-left 10px
                margin-top 5px
                i
                    display inline-block
                    width 30px
                    width 30px
                    vertical-align text-top
                    font-size 30px
                span
                    display inline-block
                    max-width 165px
                    vertical-align middle
                    text-align center
                    border-radius 4px
                    font-size 11px

        #guests-list
            i
                vertical-align middle
            i.green
                color green
            i.red
                color red
            i.blue
                color blue

    .modal-header
        background: white
        color: #333

        a
            font-size: 16px
            text-decoration: none
            color: #333

    .modal-footer
        #cancel-btn
            cursor pointer
            font-size 13px
            margin-right 10px

    a.btn.rrule-show
        border-radius: 0px
        padding: 5px

    textarea
    textarea:focus
        font-family: styled
        box-shadow: none
        border: 1px solid blue

    textarea:hover
        border: 1px solid orange

    #addguest.btn
        border-radius: 0px
        padding: 5px



@media(min-width: 1100px)
    #event-modal
        width 1000px
        margin-left -500px

        .modal-body > *
            width 50%

        .modal-body #guests-block
            position absolute
            width 40%
            top 20px
            right 20px

            #guests-list
                border-bottom 1px solid black
