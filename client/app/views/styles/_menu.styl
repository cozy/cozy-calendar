.sidenav
    position relative
    float: left
    left: 0
    top: 0
    width: 200px
    height 100vh !important     // TODO removed importabt once the resize in JS is gone
    padding 0.5em 1em
    background: #F2F2F2
    border-right 1px solid #e2e2e2
    box-sizing border-box
    list-style-type: none
    text-align: left
    font-family: 'Source Sans Pro', sans-serif
    font-weight: normal

    a
        color: #333

        &:hover
            text-decoration none

    .btn
        color #fff
        background midgrey

        &:hover
            background blue

    i
        position relative
        top 1px
        margin-right 0.5em

    li.active
        background: #AEDBFF

        a
            background: transparent
            display: inline-block

            &.calendar-add
                width 150px

    li.divider
        background-color transparent

        &:hover
            background-color transparent

    .calendars
        position relative
        display: block
        margin: 0
        padding: 0.5em 0
        cursor: pointer

        .title
            display flex
            justify-content space-between
            align-items center
            font-size 1.3em
            color #333

        .calendar-add
            margin-top 1px
            font-size 1.6rem
            text-shadow none
            color #bbb

            &:hover
                color blue

    .menu-icon
        display none        // hidden in desktop view

    .spinner
        flex none
        position absolute
        top 50%
        right 0
        margin-top -0.5rem
        height 1rem
        width 1rem

    #multiple-actions
        padding 15px

        i
            cursor pointer
            margin-right 1em

            &.remove-cals
                &.hidden
                    opacity 0

        &.hidden
            opacity 0

    ul#menuitems
        margin-left 0
        list-style none
        padding-bottom 4em

        li.tagmenuitem
            display flex
            position relative
            align-items center
            margin-left 0
            padding 0.4em 0.1em

            &:hover
                cursor pointer

            .calendar-actions
                opacity 0
                margin 0 0.5em 0 0.5em
                &:checked
                    opacity 1
            i
                margin 0px

            .badge
                flex none
                display inline-block
                width 1em
                height 1em
                padding 0
                margin-right 0.8em
                border-radius 100%

            .calendar-name
                width 95%
                padding-right 1em
                font-size 1em
                color #555
                word-break break-all

            input.calendar-name
                width 100px
                margin-bottom 0
                border-radius 0
                padding 2px 5px
                box-shadow none

            .dropdown
                display flex
                align-items center

                .dropdown-toggle

                    .caret
                        margin-top 0 !important // overrides bootstrap
                        vertical-align middle
                        margin-right 4px
                        border-top-color #000
                        border-bottom-color #000
                        opacity 0.2
                        transform scale(1.5, 1.5)

                        &:hover
                            color blue
                            border-top-color blue
                            border-bottom-color blue


                .dropdown-menu
                    padding 0.4em 0
                    min-width 180px
                    border-color #ddd
                    box-shadow 0 5px 16px rgba(0,0,0,0.12)

                    & > li
                        margin 0
                        padding 0

                        a
                            padding 0.4em 1em
                            margin-bottom 0.2em

                            &:hover
                                background blue


            &:hover
                .calendar-actions
                    opacity 1
                .dropdown .dropdown-toggle .caret
                    display inline-block

                    &:hover
                        opacity 1


.color-picker
    margin 0 1em
    list-style none

    li
        display inline-block
        width 1.3rem
        height 1.3rem
        list-style none
        margin-right 0.2em
