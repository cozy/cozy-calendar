section
    h3= t('mobile sync')

    if account == null
        p= t('to sync your cal with')
        ol
            li= t('install the sync module')
            li= t('connect to it and follow')
    else
        p= t('sync headline with data')
        ul
            li #{t('sync url')} https://#{account.domain}/public/sync/principals/me
            li #{t('sync login')} #{account.login}
            li #{t('sync password') + " "}
                span#placeholder= account.placeholder
                button.btn.btn-small#show-password= t('show')
                button.btn.btn-small#hide-password= t('hide')
    p= t('sync help') + " "
        a(href='https://docs.cozy.io/mobile/calendar.html', target="_blank")= t('sync help link')

