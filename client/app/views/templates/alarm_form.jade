.form-horizontal.well

    .control-group
        input#input-desc.input-block-level(
            type="text", placeholder=t("What should I remind you ?"))

    .form-inline
        #date-control
            .input-append.date
                input#input-date.span2(type="text", value=defaultDate)
            .input-append.bootstrap-timepicker
                input#input-time.input-small(type="text", value=defaultTime)

        select#input-timezone.input
            option(value="#{defaultTimezone}", selected) #{defaultTimezone}
            each timezone in timezones
                option(value="#{timezone.value}") #{timezone.value}

        select#action.input-small
            each displayAction, action in actions
                if action == defaultAction
                    option(
                        value="#{action}", selected)= t(displayAction)
                else
                    option(value="#{action}")= t(displayAction)


    button.btn.add-alarm= t('add the alarm')
    button.btn.cancel= t('cancel')
    .clearfix
